mixin TeamMember(config) 
  .col-sm-6.col-lg-3.text-center
    img(src=`${CWD}assets/img/gallery/${config.image}` width='260'  alt='...')
    h5.fw-bold.mt-4.mb-1=config.name
    p=config.designation

